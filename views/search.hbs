<form class="search" action="/products/search" method="POST">
    <input type="search" name="name" value="{{house.name}}" placeholder="Search here...">
    <button type="submit">Search</button>
</form>
<section id="find-section">

    <!-- If there are any matching matches from the search, show each of them -->
  {{#each houses}}
 

   
    <div class="card">
        <h3>{{this.name}}</h3>
        <p>{{this.description}}</p>
        <div class="cta-container"><a href="/products/details/{{this._id}}" class="det-link">Details</a></div>
        <div class="card_circle"><img src="{{this.imageUrl}}"></div>

    </div>

    <!-- If there are no search matches, show: -->
   {{else}}
    <div class="no-data-listing">
                    <p class="no-offer">No match was found for the submitted type...</p>
                </div>
    {{/each}}

              
</section>